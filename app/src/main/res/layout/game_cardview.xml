<RelativeLayout android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/game_card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/chino_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/game_card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/game_card_rating"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_square_white"
        android:paddingBottom="5dp"
        android:drawablePadding="5dp"
        android:textSize="12sp"
        android:textColor="#FFF"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_mypage_ratingstar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" />
</RelativeLayout>